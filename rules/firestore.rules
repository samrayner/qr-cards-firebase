rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // FUNCTIONS //

    function isAuthenticated() {
      return request.auth != null;
    }

    function isUser(userUID) {
      return request.auth.uid == userUID;
    }

    function isInLobby(lobbyCode) {
      return exists(/databases/$(database)/documents/lobbys/$(lobbyCode)/players/$(request.auth.uid));
    }

    function getLobby(lobbyCode) {
      return get(/databases/$(database)/documents/lobbys/$(lobbyCode));
    }

    // ROUTES //

    match /{document=**} {
      allow read, write: if false;
    }

    match /lobbys/{lobbyCode=**} {
      allow read: if isInLobby(lobbyCode);
    }
    
    match /lobbys/{lobbyCode} {
      allow create: if isAuthenticated();
      allow update, delete: if getLobby(lobbyCode).data.createdBy == request.auth.uid;
      
      match /players/{userUID} {
      	allow write: if isUser(userUID);
      }
    }
  }
}
