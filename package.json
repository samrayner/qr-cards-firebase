{
  "name": "testing-cloud-firestore",
  "scripts": {
    "build:functions": "tsc -p ./functions/tsconfig.build.json",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore",
    "lint:functions": "tslint -p ./functions",
    "lint:rules": "tslint -p ./rules",
    "lint": "npm run lint:functions && npm run lint:rules",
    "postinstall": "npm install --prefix ./functions",
    "execute-tests:functions": "jest './functions'",
    "execute-tests:rules": "jest './rules'",
    "test": "npm run test:rules && npm run test:functions",
    "test:functions": "npm run build:functions && firebase emulators:exec --only firestore,functions 'npm run execute-tests:functions'",
    "test:rules": "firebase emulators:exec --only firestore 'npm run execute-tests:rules'",
    "validate:functions": "tsc -p ./functions --noEmit",
    "validate:rules": "tsc -p ./rules --noEmit",
    "validate": "npm run validate:functions && npm run validate:rules"
  },
  "dependencies": {
    "@firebase/testing": "^0.13.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "@types/uuid": "^3.4.5",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.5.0"
  },
  "private": true
}
